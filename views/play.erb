<html>
  <head>
    <title> Battle </title>
  </head>
  <body>
    <h1>Battle</h1>
    <p><%= @game.player_1.name %> vs. <%= @game.player_2.name %></p>
    <p>Hit points Player 1: <%= @game.player_1.points %> </p>
    <p>Hit points Player 2: <%= @game.player_2.points %></p>
    <% if session[:turn] %>
      <br>
      <p><%= session[:turn] %></p>
    <% end %>
    <br>
    <form action="/attacks" method="post">
      <input type="submit" value="Attack" />
    </form>
  </body>
</html>
